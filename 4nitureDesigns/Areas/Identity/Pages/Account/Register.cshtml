@page
@model RegisterModel
@using Team.Utilities
@{
    ViewData["Title"] = "Register";
}
@if (User.IsInRole(StaticDetail.MgrRole))
{
    <h4>Register Employee</h4>

}
else{<h1>@ViewData["Title"]</h1>}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-floating my-2">
                <input maxlength="10" asp-for="Input.FirstName" class="form-control"  aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

             <div class="form-floating my-2">
                <input maxlength="10" asp-for="Input.LastName" class="form-control"  aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

             <div class="form-floating my-2">
                <input maxlength="15"asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating my-2">
                <input maxlength="20" asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input maxlength="25" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input maxlength="20" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(StaticDetail.MgrRole))
            {
                
           
            <div class="form-floating my-2">
                <input type="radio" name="rdUserRole" value="@StaticDetail.MgrRole" />@StaticDetail.MgrRole
                <input type="radio" name="rdUserRole" value="@StaticDetail.TechnicainRole" />@StaticDetail.TechnicainRole
                <input type="radio" name="rdUserRole" value="@StaticDetail.FDRole" />@StaticDetail.FDRole

            </div>
             }
            <button id="registerSubmit" type="submit" class="w-100 btn  btn-primary">Register</button>
        </form>
    </div>
    @if (User.IsInRole(StaticDetail.MgrRole))
    {
        <div class="col-md-6 col-md-offset-2">

       <a  asp-page="/Admin/UsersMgt/Index" class="btn btn-primary mx-2 "> Present Users</a>
        
    </div>
    }
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
