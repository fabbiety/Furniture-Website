@page 
@model _4nitureDesigns.Pages.Admin.UsersMgt.IndexModel
@{
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="identity" asp-page="/Account/Register" class="btn btn-primary">
               Register Employee
            </a>

        </div>
    </div>

    <br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                 <th>
                     Email
                </th>
                <th>
                    Edit/Delete
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach(var obj in Model.AppUser)
            {
                <tr>
                    <td width="25%">@obj.FirstName</td>
                    <td width="25%">@obj.LastName</td>
                    <td width="30%">@obj.Email</td>
                    <td>
                        <div class= "w-100 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                        
                    </td>
                    
            </tr>

            }
            
        </tbody>

    </table>
</div>