@page
@model _4nitureDesigns.Pages.Admin.UsersMgt.DeleteModel
@{
}
<form method="post">
   <input hidden asp-for="AppUser.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete User</h2>
            <hr/>
         </div>
         
         <div class="mb-3">
             <label asp-for="AppUser.FirstName"></label>
             <input asp-for="@Model.AppUser.FirstName" disabled class="form-control"/>
            
         </div>
         <div class="mb-3">
             <label asp-for="AppUser.Email"></label>
             <input asp-for="@Model.AppUser.Email" disabled class="form-control"/>
             
         </div>
         <button type="submit"  disabled class="btn btn-danger" style="width:100px;">Delete</button>
         <a asp-page="Index" class="btn btn-secondary" style="width:100px;">Back</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}