@page 
@model _4nitureDesigns.Pages.Admin.Categories.IndexModel
@{
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
              <i class="bi bi-file-plus"></i> &nbsp; Create New Category
            </a>

        </div>
    </div>

    <br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
               @* <th>
                    Order
                </th>*@
                <th>
                    Edit/Delete
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                   @* <td width="30%">@obj.Orders</td>*@
                    <td>
                        <div class= "w-100 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                        
                    </td>
                    
            </tr>

            }
            
        </tbody>

    </table>
</div>