@page
@model _4nitureDesigns.Pages.Admin.Product.IndexModel



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Available Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="upsert" class="btn btn-primary">
              <i class="bi bi-file-plus"></i> &nbsp; Create New Product
            </a>

        </div>
    </div>

    <br/>

    <table >
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
              
               
                <th>
                     Edit/Delete
                </th>
            </tr>

        </thead>
       <tbody>
            @foreach(var obj in Model.Product)
            {
                <tr>
                   @* List the product Name and Price*@
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Price</td>
                   
                    <td>
                        @*Edit and delete button and route to respective pages using the Id*@
                        <div class= "w-100 btn-group" role="group">
                            <a asp-page="upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                        
                    </td>
                    
            </tr>

            }
            
        </tbody>

    </table>
</div>
