@page
@model _4nitureDesigns.Pages.Customer.Cart.IndexModel
    <form method="post">
        <br />
        @if (Model.ShoppingCartList.Count() == 0)
    {
        <div>
            <h3> No Item Selected yet </h3> <br> <br>

            <a href="./HomePage/Index"class="btn btn-outline-info btn-sm">Continue Shopping</a>
        </div>
    }
    else
    {
         <div class="container">
                    <div class="card">
                        <div class="card-header  text-light ml-0 ">
                            <div class="row">
                            <div class="col-6 pt-2 ">
                                <h5 class="text-black">Shopping Cart</h5>
                            </div>
                            <div class="col-6 text-end">
                                <a href="./HomePage/Index"class="btn btn-outline-info btn-sm">Continue Shopping</a>
                            </div>
                            </div>
                        </div>
                        <div class="card-body">
                           @foreach(var item in Model.ShoppingCartList)
                {
                    
                <div class="row">
                                    <div class="d-none d-lg-block col-lg-2 text-center py-2">
                                        <img src="@item.Products.Image" class="rounded" width="120" height="80" />
                                    </div>
                                    <div class="col-12 text-sm-center text-md-start col-md-5 pt-md-4 ">
                                        <h4><strong>@item.Products.Name</strong></h4>

                                         <div class="badge bg-primary text-center" style="font-size:12px;">
                                                @item.Products.category.Name
                                            </div>
                                              <div class="badge bg-info text-center" style="font-size:12px;">
                                                @item.Products.FurnitureType.Name
                                            </div>
                                    </div>
                                    <div class="col-12 text-sm-center col-md-5 text-md-start row pt-3">
                                        <div class="col-4 text-md-right pt-md-3" style="padding-top:5px;">
                                            <h6><strong>£@item.Products.Price <span class="text-muted">x</span> @item.Count </strong></h6>
                                        </div>
                                        <div class="col-6 col-sm-4 col-lg-6">
                                                <button type="submit" class="btn btn-primary"
                                                asp-page-handler="Plus" asp-route-cartId="@item.Id">  @*Using Custom Handlers for the operations*@
                                                   <i class="bi bi-plus-square"></i>
                                                </button>
                                                <button type="submit" class="btn btn-danger" 
                                                    asp-page-handler="Minus" asp-route-cartId="@item.Id">
                                                    <i class="bi bi-dash-square"></i>
                                                </button>
                                        </div>
                                        <div class="col-2 col-sm-4 col-lg-2 text-right">
                                            <button type="submit" class="btn btn-outline-danger"
                                            asp-page-handler="Remove" asp-route-cartId="@item.Id">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                
                                <hr />
                            }

                            <div class="row">
                                <div class="col-12 col-md-5">

                                </div>
                                <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                                    <ul class="list-group">
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <span class="text-info"> Total (GBP)</span>
                                            <strong class="text-info">£@Model.SumTotal</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>


                        </div>
                        <div class="card-footer">
                            <div class="col-12 col-lg-4 offset-lg-8 col-md-6 offset-md-6">
                                <a asp-page ="Summary"class="btn btn-success form-control">Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
        
    }
   
    </form>
