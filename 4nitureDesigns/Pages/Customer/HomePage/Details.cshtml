@page
@model _4nitureDesigns.Pages.Customer.HomePage.DetailsModel


<div class="">
    <form method="post">

        
        <input asp-for="ShoppingCart.ProductId" hidden />
        <input asp-for="ShoppingCart.AppUserId" hidden />


        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                    <div class="col-12 col-md-6 pt-2">
                        <h1 class="text-primary">@Model.ShoppingCart.Products.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-end pt-2">
                        <h1 class="text-muted"> £@Model.ShoppingCart.Products.Price</h1>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">

                                      
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCart.Products.Description)</p>

                                              <div class="form-floating my-2">
                                            <input asp-for="ShoppingCart.Count" type="number" min="1" class="form-control" aria-required="true" />
                                            <label asp-for="ShoppingCart.Count"></label>
                                            <span asp-validation-for="ShoppingCart.Count" class="text-danger"></span>
                                        </div>
                                          
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.Products.Image" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="index" class="btn btn-success btn-square form-control" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial"/>
}