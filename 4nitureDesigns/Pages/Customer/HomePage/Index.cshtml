@* Displaying product list on the home page*@
	
			@foreach(var product in Model.ProductList){


			<div class="col-lg-4 col-md-6 pb-4 filter">
				
					<div class="card-body pb-1 row">
						<div class="col-8 h4 badge p-2 border w-70 bg-info ">@product.Name</div>
						<div class="col-4 text-end badge p-2 border w-30 text-dark bg-warning  "><span class="text-info h5">£@product.Price</span></div>
					</div>
					<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@product.Image" alt="product image">
                    <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
							<p>@Html.Raw(product.Description)</p>
						</div>
                        <div class="col-12 p-1">
							<a asp-page="Details" asp-route-id="@product.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
						</div>
				
			</div>
			}
	
</div>

